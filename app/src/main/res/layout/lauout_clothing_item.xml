<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/clothing_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@drawable/pic1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/clothing_image"
        android:padding="@dimen/standard_margin">

        <TextView
            android:id="@+id/clothing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_font_size"
            tools:text="عنوان لباس" />


        <TextView
            android:id="@+id/view_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clothing_title"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_font_size"
            tools:text="700" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_count_text"
            android:layout_alignBottom="@id/view_count_text"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/view_count_text"
            android:src="@drawable/ic_views_white" />

    </RelativeLayout>


</RelativeLayout>